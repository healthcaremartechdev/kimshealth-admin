{
  "kind": "collectionType",
  "collectionName": "jobs",
  "info": {
    "singularName": "job",
    "pluralName": "jobs",
    "displayName": "Job",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "shortDescription": {
      "type": "text"
    },
    "hospitals": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::hospital.hospital"
    },
    "qualification": {
      "type": "string"
    },
    "experience": {
      "type": "string"
    },
    "salary": {
      "type": "string"
    },
    "numberOfVacancy": {
      "type": "string"
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "details": {
      "type": "richtext"
    },
    "manageAppearance": {
      "type": "component",
      "repeatable": false,
      "component": "component.minimal-appearance"
    },
    "metaSection": {
      "type": "component",
      "repeatable": false,
      "component": "component.meta-section"
    },
    "locations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::location.location"
    },
    "keyResponsibilities": {
      "type": "richtext"
    },
    "requirements": {
      "type": "richtext"
    },
    "jobDescription": {
      "type": "richtext"
    },
    "applicationEmail": {
      "type": "string"
    },
    "date": {
      "type": "date"
    }
  }
}
